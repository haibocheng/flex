<?xml version="1.0" encoding="utf-8"?>
<!-- Simple example to demonstrate the Halo NumericStepper control. -->
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:mx="library://ns.adobe.com/flex/halo">

    <s:Panel title="Halo NumericStepper Control Example"
            width="75%" height="75%"  
            horizontalCenter="0" verticalCenter="0">
        <s:VGroup left="10" right="10" top="10" bottom="10">
            <s:Label width="100%" color="blue"
                    text="Default Halo NumericStepper control with a minimum=0, maximum=10, and stepSize=1."/>
            <mx:NumericStepper />

            <mx:HRule width="100%" />

            <s:Label width="100%"  color="blue"
                    text="Halo NumericStepper control with a minimum=10, maximum=40, stepSize=0.01, and starting value of 20."/>
            <mx:NumericStepper id="ns" 
                    minimum="10.00" maximum="40.00" 
                    stepSize="0.01" 
                    value="20.00" 
                    width="65"/>

            <s:Label color="blue" text="You selected {ns.value}"/>
        </s:VGroup>
    </s:Panel>

</s:Application>
