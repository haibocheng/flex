<?xml version="1.0" encoding="utf-8"?>
<!-- Simple example to demonstrate the Halo RichTextEditor control. -->
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:mx="library://ns.adobe.com/flex/halo">

    <s:VGroup left="10" right="10" top="10" bottom="10">
        <mx:RichTextEditor id="rte" title="Halo RichTextEditor" width="100%" height="75%"
                text="Enter text into the Halo RichTextEditor control, then click a button to display your text as plain text, or as HTML-formatted text." />

        <s:HGroup>
            <s:Button label="Show Plain Text" click="rteText.text = rte.text;"/>
            <s:Button label="Show HTML Markup" click="rteText.text = rte.htmlText;"/>
        </s:HGroup>

        <s:TextArea id="rteText" width="100%" height="25%"/>
    </s:VGroup>

</s:Application>
