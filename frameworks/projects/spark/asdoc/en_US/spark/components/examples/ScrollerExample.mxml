<?xml version='1.0' encoding='UTF-8'?>
<!-- Simple example to demonstrate the Scroller control -->
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/halo">

    <!-- Panel used as a container for Scroller control examples -->
    <mx:Panel title="Spinner Control Example" height="75%" width="75%" paddingTop="10"
        paddingLeft="10" horizontalCenter="0" verticalCenter="0">

        <s:Scroller>
            <s:Group width="100" height="100"> 
                <mx:Image width="300" height="400" 
                    source="@Embed(source='assets/logo.jpg')"/> 
            </s:Group>        
        </s:Scroller>     
                                                          
    </mx:Panel>          
</s:Application> 