<?xml version="1.0" encoding="utf-8"?>
<!-- Simple example to demonstrate the s:Rotate class. -->
<s:Application
	xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:mx="library://ns.adobe.com/flex/halo"
    xmlns:s="library://ns.adobe.com/flex/spark">

    <!-- Standalone effects must be declared in the "Declarations" tag in Flex 4 -->
    <fx:Declarations>
        <s:Rotate3D id="rotateEffect" target="{targetBox}" angleXFrom="0" angleXTo="180" angleYFrom="0" angleYTo="180" duration="1000" autoCenterTransform="true"
	        effectStart="playButton.enabled=false" effectEnd="playButton.enabled=true;"/>
    </fx:Declarations>

    <s:Panel title="AnimateTransformRotate3D Effect Example"
    	width="75%" height="75%">

        <mx:HBox width="100%" height="100%">
            <!-- Our target to affect -->
            <mx:VBox id="targetBox" width="50%" horizontalAlign="center">
                <mx:Label text="Nokia 9930"/>
                <mx:Image source="@Embed(source='assets/Nokia_6630.png')"/>
            </mx:VBox>

            <!-- Directions -->
            <mx:VBox id="detailsBox" width="50%" left="0">
                <mx:Text width="99%" color="blue"
		        	text="The AnimateTransformRotate3D effect rotates a target using the following parameters: angleXFrom, angleXTo, angleXBy, angleYFrom, angleYTo, angleYBy, angleFrom, angleTo, angleBy. Click 'AnimateTransformRotate3D' to watch the effect."/>
            </mx:VBox>
        </mx:HBox>

        <s:Rect left="0" right="0" bottom="0" height="30">
            <s:fill>
                <s:LinearGradient rotation="90">
                    <s:GradientEntry color="0xE2E2E2" />
                    <s:GradientEntry color="0xD9D9D9" />
                </s:LinearGradient>
            </s:fill>
        </s:Rect>
        <!-- End then Play the effect to rotate the target.-->
        <s:Button id="playButton"
        	left="5" bottom="5"
        	label="AnimateTransformRotate3D" click="rotateEffect.play();"/>
    </s:Panel>
</s:Application>
