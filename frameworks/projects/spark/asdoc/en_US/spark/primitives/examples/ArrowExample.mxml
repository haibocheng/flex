<?xml version="1.0" encoding="utf-8"?>
<!-- ArrowExample.mxml -->
<s:Application name="ArrowExample"
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:mx="library://ns.adobe.com/flex/halo">

    <s:Panel title="Arrow Graphic Example"
            width="75%" height="75%"
            horizontalCenter="0" verticalCenter="0">
        <s:Group left="10" right="10" top="10" bottom="10">
            
            <s:Graphic x="100" y="0">
                <!-- Use Use compact syntax with absolute coordinates. -->
                <s:Path data="M 20 0 
                        C 50 0 50 35 20 35
                        L 15 35 
                        L 15 45 
                        L 0 32 
                        L 15 19 
                        L 15 29 
                        L 20 29 
                        C 44 29 44 6 20 6">
                    <!-- Define the border color of the arrow. -->
                    <s:stroke>
                        <s:SolidColorStroke color="0x888888"/>
                    </s:stroke>
                    <!-- Define the fill for the arrow. -->
                    <s:fill>
                        <s:LinearGradient rotation="90">
                            <s:GradientEntry color="0x000000" alpha="0.8"/>
                            <s:GradientEntry color="0xFFFFFF" alpha="0.8"/>
                        </s:LinearGradient>
                    </s:fill>
                </s:Path>
            </s:Graphic>

            <s:Graphic x="200" y="0">
                <!-- Use compact syntax with relative coordinates. -->
                <s:Path data="m 20 0 
                        c 30 0 30 35 0 35 
                        l -5 0
                        l 0 10
                        l -15 -13
                        l 15 -13
                        l 0 10
                        l 5 0
                        c 24 0 24 -23 0 -23">
                    <!-- Define the border color of the arrow. -->
                    <s:stroke>
                        <s:SolidColorStroke color="0x888888"/>
                    </s:stroke>
                    <!-- Define the fill for the arrow. -->
                    <s:fill>
                        <s:LinearGradient rotation="90">
                            <s:GradientEntry color="0x000000" alpha="0.8"/>
                            <s:GradientEntry color="0xFFFFFF" alpha="0.8"/>
                        </s:LinearGradient>
                    </s:fill>
                </s:Path>
            </s:Graphic>
        </s:Group>
    </s:Panel>

</s:Application>
