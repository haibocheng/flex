<?xml version="1.0" encoding="utf-8"?>
<!-- EllipseExample.mxml -->
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">

    <s:Panel title="Ellipse Graphic Example"
            width="75%" height="75%"
            horizontalCenter="0" verticalCenter="0">
        <s:Graphic horizontalCenter="0" verticalCenter="0">
            <s:Ellipse height="100" width="250">
                <s:stroke>
                    <s:SolidColorStroke color="0x000000" weight="2"/>
                </s:stroke>
                <s:fill>
                    <s:RadialGradient>
                        <s:entries>
                            <s:GradientEntry color="0x0056FF" ratio="0.00" alpha="0.5"/>
                            <s:GradientEntry color="0x00CC99" ratio="0.33" alpha="0.5"/>
                            <s:GradientEntry color="0xECEC21" ratio="0.66" alpha="0.5"/>
                        </s:entries>
                    </s:RadialGradient>
                </s:fill>
            </s:Ellipse>
        </s:Graphic>
    </s:Panel>

</s:Application>
